{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User Registration",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20
        },
        "password": {
            "type": "string",
            "minLength": 8
        },
        "email": {
            "type": "string",
            "format": "email"
        }
    },
    "required": [
        "username",
        "password",
        "email"
    ]
}