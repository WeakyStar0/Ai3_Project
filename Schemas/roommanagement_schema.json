{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Room Management",
    "type": "object",
    "properties": {
        "roomName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "capacity": {
            "type": "integer",
            "minimum": 1
        },
        "equipment": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "roomName",
        "capacity"
    ]
}